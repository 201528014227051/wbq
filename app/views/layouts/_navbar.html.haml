%header.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .container
      = link_to (Settings.app_name || 'Central'), root_path, class: 'brand'
      .nav-collapse.collapse
        %ul.nav
          %li= link_to '首页', root_path, class: 'active'
        %ul.nav.pull-right
          - if current_user
            = render 'profiles/user_drop_menu'
            %li= link_to '后台管理', admin_root_path if current_user.admin
            %li= link_to '退出', logout_path
          - else
            %li= link_to '登陆', login_path
            %li= link_to '注册', register_path
